<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recyclerview_friend_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/recyclerview_friend_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="8dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/image_description"
        android:scaleType="fitXY"
        android:background="#00000000" />

    <TextView
        android:id="@+id/recyclerview_friend_username"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="@string/account_text"
        android:textColor="#000" />

    <ImageButton
        android:id="@+id/recyclerview_friend_action"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:src="@drawable/message_black_icon_24dp"
        android:contentDescription="@string/image_description"
        android:background="#00000000" />
</LinearLayout>
