<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_favorite_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    card_view:cardElevation="5dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/recyclerview_favorite_primaryimage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="8dp"
            android:layout_gravity="top"
            android:src="@drawable/logo"
            android:contentDescription="@string/image_description"
            android:scaleType="fitXY"
            android:background="#00000000" />

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recyclerview_favorite_username"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:textSize="20sp"
                    android:text="@string/account_text"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/recyclerview_favorite_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_text" />
            </LinearLayout>

            <TextView
                android:id="@+id/recyclerview_favorite_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/message" />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <ImageButton
                android:id="@+id/recyclerview_favorite_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/delete_blue_icon_24dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:contentDescription="@string/image_description"/>

            <ImageButton
                android:id="@+id/recyclerview_favorite_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/share_blue_icon_24dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:contentDescription="@string/image_description"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>